<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_height="47dp"
    android:background="@drawable/tgb_bg_result_item">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/tgb_pic_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_winner"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/tgb_pic_winner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_get_sugar_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:text="获得弹珠：265"
        android:textColor="#F62442"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/civ_head"
        app:layout_constraintTop_toTopOf="@id/civ_head" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:text="最佳手气:"
        android:textColor="#D2834E"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/civ_head"
        app:layout_constraintStart_toStartOf="@id/tv_get_sugar_num" />

    <TextView
        android:id="@+id/tv_lucky_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:text="5"
        android:textColor="#D44E38"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv1"
        app:layout_constraintStart_toEndOf="@id/tv1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:includeFontPadding="false"
        android:text="接龙:"
        android:textColor="#D2834E"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv1"
        app:layout_constraintStart_toEndOf="@id/tv1" />

    <TextView
        android:id="@+id/tv_jielong_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:text="4"
        android:textColor="#619830"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv1"
        app:layout_constraintStart_toEndOf="@id/tv2" />
</android.support.constraint.ConstraintLayout>
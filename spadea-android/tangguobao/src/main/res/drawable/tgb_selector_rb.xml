<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item android:width="13dp" android:height="13dp" android:drawable="@drawable/tgb_rb_unchecked" />
            <item android:width="8dp" android:height="8dp" android:drawable="@drawable/tgb_rb_checked" />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/navbar_icon_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="@dimen/sp_18"
            tools:text="我是标题" />

        <Button
            android:id="@+id/btn_next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@drawable/btn_change_phone_next_step_selector" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        tools:text="更改手机后，下次登录可使用新手机号登录，当前手机号：
13965879853" />

    <LinearLayout
        android:id="@+id/ll_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_21"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_18">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="101"
            android:text="国家/地区"
            android:textColor="@color/color_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="220"
            android:text="中国大陆"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <ImageView style="@style/My_Info_Item_Arrow_Style" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_21"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_18">

        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="101"
            android:textColor="@color/color_text"
            android:textSize="@dimen/sp_16"
            android:text="+86" />

        <EditText
            android:id="@+id/et_phone"
            style="?android:attr/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="220"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/My_Info_Item_Arrow_Style"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_38"
    android:layout_marginRight="@dimen/dp_38"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_193"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/bg_fff"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_balance_no_foot"></ImageView>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="金币不足，无法购买"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="是否继续"
            android:textColor="#ffff8890"
            android:textSize="@dimen/sp_13" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_clean"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_39"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/bg_clean"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_recharge"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_39"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/bg_payment"
                    android:gravity="center"
                    android:text="购买并赠送"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
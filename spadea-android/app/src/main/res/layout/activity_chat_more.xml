<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <com.lihang.ShadowLayout
            android:id="@+id/sl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="15dp"
            app:hl_shadowBackColor="@color/white"
            app:hl_shadowColor="@color/color_1A000000"
            app:hl_shadowLimit="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center_vertical"
                android:padding="8dp">

                <com.spadea.xqipao.utils.view.DecorationHeadView
                    android:id="@+id/dhv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/color_FF545454"
                    android:textSize="14sp"
                    tools:text="头像名" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_right" />
            </LinearLayout>
        </com.lihang.ShadowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_r8_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="设置备注名"
                android:textColor="@color/color_FF6D7278"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_jb"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:drawableRight="@mipmap/icon_right"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="举报"
                android:textColor="@color/color_FF6D7278"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_add_black"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="加入黑名单"
                android:textColor="@color/color_FF6D7278"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_topbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="重置密码需要验证当前手机号，请获取验证码"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_21"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_18">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="101"
            android:text="手机号"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="220"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/sp_14"
            tools:text="185 9648 7532" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_21"
            android:paddingTop="@dimen/dp_18"
            android:paddingRight="@dimen/dp_21"
            android:paddingBottom="@dimen/dp_18">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="101"
                android:text="验证码"
                android:textColor="@color/color_text"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_code"
                style="?android:attr/textViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="220"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_21"
            android:background="@drawable/bg_r99_f_colormain"
            android:minHeight="24dp"
            android:text="获取验证码"
            android:textColor="@color/color_main"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_21"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_18">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="101"
            android:text="新密码"
            android:textColor="@color/color_text"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_pwd"
            style="?android:attr/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="220"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_21"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_21"
        android:paddingBottom="@dimen/dp_18">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="101"
            android:text="再次输入"
            android:textColor="@color/color_text"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_pwd2"
            style="?android:attr/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="220"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_f0f0f0" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_r4_colormain_colormain"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_code_qa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:text="收不到验证码？"
        android:textColor="@color/color_ff8890"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>
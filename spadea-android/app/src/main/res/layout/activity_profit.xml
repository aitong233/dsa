<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/def_bg"
    android:id="@+id/bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.spadea.xqipao.widget.MainTabView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"

            android:orientation="vertical">


            <com.spadea.xqipao.widget.SegmentTabLayout
                android:background="@drawable/shpe_home_tab"
                android:id="@+id/tab"
                android:layout_width="@dimen/dp_140"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="@dimen/dp_10"
                app:tl_indicator_anim_enable="true"
                app:tl_bar_stroke_color="@color/transparent"
                app:tl_indicator_bounce_enable="false"
                app:tl_indicator_color="@color/main_pink"
                app:tl_indicator_corner_radius="@dimen/dp_15"
                app:tl_textSelectColor="@color/white"
                app:tl_textBold="SELECT"
                app:tl_textsize="13dp"
                app:tl_textUnselectColor="@color/color_99" />



            <TextView
                android:id="@+id/tv_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前财产  0"
                android:textColor="@color/main_text"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14" />




        </LinearLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1340:900"
                android:src="@mipmap/bg_shouyi"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="399:130"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/main_text"
                    android:text="可提取佣金(金币)"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:id="@+id/tv_total"
                    android:text="888"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_text"
                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="399:140"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text_gray"
                            android:textSize="12dp"
                            android:text="今日收益"
                            />


                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text"
                            android:textSize="18dp"
                            android:text="188888888888"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text_gray"
                            android:textSize="12dp"
                            android:text="本周收益"
                            />


                        <TextView
                            android:id="@+id/tv_week"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text"
                            android:textSize="18dp"
                            android:text="188888888888"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            />


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text_gray"
                            android:textSize="12dp"
                            android:text="本月收益"
                            />


                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text"
                            android:textSize="18dp"
                            android:text="188888888888"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text_gray"
                            android:textSize="12dp"
                            android:text="上月收益"
                            />


                        <TextView
                            android:id="@+id/tv_last_month"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text"
                            android:textSize="18dp"
                            android:text="188888888888"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            />


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </android.support.constraint.ConstraintLayout>






        <RelativeLayout
            android:id="@+id/rl_add_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:drawableLeft="@mipmap/icon_bank"
                android:drawablePadding="@dimen/dp_15"
                android:text="绑定支付宝"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@mipmap/ic_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_capital_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
       >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/ic_mingxi"
                android:drawablePadding="@dimen/dp_15"
                android:text="提现明细"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@mipmap/ic_right" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/iv_withdrawal"
                    android:layout_width="180dp"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/main_text"
                    android:text="申请佣金"
                    android:background="@mipmap/recharge_unsel"
                    android:gravity="center"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/iv_exchange"
                    android:layout_width="180dp"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/main_text"
                    android:text="兑换金币"
                    android:background="@mipmap/recharge_unsel"
                    android:gravity="center"
                        android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />








            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
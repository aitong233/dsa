<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_165">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_avatar"
            app:riv_corner_radius="@dimen/dp_5" />

        <ImageView
            android:id="@+id/iv_week_star"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_31"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/ic_week_star_recommend_hot"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/tv_host_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@drawable/icon_room_host"
            android:drawablePadding="@dimen/dp_5"
            android:shadowColor="#1a060001"
            android:shadowDx="-1"
            android:shadowDy="0"
            android:shadowRadius="3.0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15"
            tools:text="9689" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/level_sex"
            android:paddingLeft="@dimen/dp_7"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_9"
            tools:text="女神" />

        <ImageView
            android:id="@+id/iv_room_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_home_room_lock"
            android:visibility="gone"></ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_13"
        tools:text="[情感]能量派单..." />

    <TextView
        android:id="@+id/tv_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:singleLine="true"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_12"
        tools:text="主持人:无语(*￣︶￣).." />

</LinearLayout>
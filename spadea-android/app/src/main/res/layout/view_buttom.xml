<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_gift"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mesg"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_send_mesg"></ImageView>


        <ImageView
            android:id="@+id/iv_emoj"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_robot"></ImageView>


        <ImageView
            android:id="@+id/iv_external_release"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/level_external_release"></ImageView>


        <ImageView
            android:id="@+id/iv_wheat"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/level_wheat"
            android:visibility="gone"></ImageView>


        <ImageView
            android:id="@+id/iv_mores"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_add"
            android:visibility="gone"></ImageView>


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/icon_maixu"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>

        <TextView
            android:id="@+id/tv_mic_up"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_gift"
            android:background="@mipmap/icon_maixu"
            android:gravity="center"
            android:text="上麦"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_8" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_gift"></ImageView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@mipmap/bg_shop_item">

        <RelativeLayout
            android:id="@+id/rl_pendant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/default_avatar"
                app:riv_oval="true" />

            <ImageView
                android:id="@+id/iv_frame"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/rl_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            tools:text="高冷头像挂件" />

        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            tools:text="新品.15天" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#ffff9a9a"
            android:textSize="@dimen/sp_12"
            tools:text="80金币" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rl_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_purchase"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_11"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_11"
        android:text="购买"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
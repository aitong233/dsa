<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@mipmap/bg_game">

        <LinearLayout
            android:id="@+id/ll_gift_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_box1"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_gift_red">

                    <ImageView
                        android:id="@+id/iv_globe1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_50"
                        android:src="@mipmap/abc"
                        ></ImageView>


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_box2"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_gift_red">
                    <ImageView
                        android:id="@+id/iv_globe2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_50"
                        android:src="@mipmap/abc"
                        ></ImageView>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_box3"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/img_gift_red">

                    <ImageView
                        android:id="@+id/iv_globe3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_50"
                        android:src="@mipmap/abc"
                        ></ImageView>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_gift_box"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_start"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/level_game_start"
                    ></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_over"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/level_game_over"
                    ></ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_stop"
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/level_game_stop"
                    ></ImageView>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_gamw_clean"></ImageView>

</RelativeLayout>
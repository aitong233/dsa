<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:background="@drawable/bg_dialog">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请输入交易密码"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:src="@drawable/icon_exchange_password_close"></ImageView>

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@drawable/bg_input_password"
            android:hint="请输入二级密码"
            android:gravity="center"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_16"></EditText>


        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/ed_password"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/bg_exchange_commit"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="16sp"></TextView>
    </RelativeLayout>
</RelativeLayout>
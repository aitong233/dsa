<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_15"
    android:background="@drawable/bg_room_user_info"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:text="举报"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_3">

        <com.spadea.xqipao.utils.view.DecorationHeadView
            android:id="@+id/dhv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dhv"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"
                tools:text="Ko.孤儿院" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_11"
                tools:text="ID:189080" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include layout="@layout/layout_sex_and_age" />

                <com.hyphenate.easeui.utils.view.GradeView
                    android:id="@+id/view_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"></com.hyphenate.easeui.utils.view.GradeView>

                <com.hyphenate.easeui.utils.view.JueView
                    android:id="@+id/view_jue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"></com.hyphenate.easeui.utils.view.JueView>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_data"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_rollow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6"></View>


            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/leven_follow"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_private"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6"></View>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_private" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_giving_gifts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_giving_gifts" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_admin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_down_wheat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_wheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/leven_iv_wheat" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wheat_bean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6" />


            <ImageView
                android:id="@+id/iv_wheat_ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/leven_wheat_ban" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_no_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6" />


            <ImageView
                android:id="@+id/iv_banned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/levenl_no_mesg" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_kick_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:background="#E6E6E6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_kick_out" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
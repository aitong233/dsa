<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <com.spadea.yuyin.widget.CoustomSlidingTabLayout
        android:id="@+id/coustom_sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:tl_indicator_color="#FFFE9C94"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="3dp"
        app:tl_indicator_style="NORMAL"
        app:tl_indicator_width="12dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="12dp"
        app:tl_tab_space_equal="false"
        app:tl_textSelectColor="#FF333333"
        app:tl_textUnselectColor="#FF333333"
        app:tl_textsize="@dimen/sp_13" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"></android.support.v4.view.ViewPager>


</LinearLayout>
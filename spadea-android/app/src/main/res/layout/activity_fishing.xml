<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_cat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_9"
            android:src="@drawable/icon_back_ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="小猫钓鱼"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_75"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_help" />

        <ImageView
            android:id="@+id/iv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_cat_ranking" />

        <ImageView
            android:id="@+id/iv_jackpot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_cat_jackpot" />



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_75"
        android:paddingLeft="@dimen/dp_20"
        android:background="@drawable/bg_cat_fish_recharge">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_bi"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:text="余额"
                android:textColor="#ffffc81f"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="011111111"
                android:textColor="#fffd8469"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <ImageView
            android:layout_toRightOf="@id/ll_left"
            android:src="@drawable/icon_fishing_recharge"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_36"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cat_1" />

        <ImageView
            android:id="@+id/iv_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cat_10"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:id="@+id/iv_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/icon_cat_100" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_frequency">

        <com.spadea.xqipao.utils.view.CircularProgressView
            android:id="@+id/circular_progress_view"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            xx:backColor="#FF9F4B"
            xx:backWidth="5dp"
            xx:progColor="@color/white"
            xx:progWidth="5dp"
            xx:progress="100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钓鱼"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:src="@mipmap/egg"
        android:layout_alignParentBottom="true" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_week_start"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@drawable/bg_room_type_select"
        android:orientation="horizontal"
        android:padding="@dimen/dp_2">

        <TextView
            android:id="@+id/tv_charm_ranking"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_item_select_weekstar"
            android:gravity="center"
            android:text="魅力榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13"></TextView>


        <TextView
            android:id="@+id/tv_room"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="房间榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13"></TextView>


        <TextView
            android:id="@+id/tv_contribution"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="贡献榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13"></TextView>


    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>


</LinearLayout>
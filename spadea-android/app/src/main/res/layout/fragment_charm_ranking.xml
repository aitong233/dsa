<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_charm"></ImageView>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_22"
        android:background="@drawable/bg_room_type_select"
        android:orientation="horizontal"
        android:padding="@dimen/dp_2">

        <TextView
            android:id="@+id/tv_day_ranking"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_indicator"
            android:gravity="center"
            android:text="日榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_week_ranking"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_total_ranking"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总榜"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_13">

        </TextView>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout"></android.support.v4.view.ViewPager>

</RelativeLayout>
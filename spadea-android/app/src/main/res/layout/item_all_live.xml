<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:background="#FFFEB6C3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_img"></ImageView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:shadowColor="#33060001"
                android:shadowDx="-1"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14"
                tools:text="零点电台" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_together"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/bg_all_go"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_6"
            android:text="一起去看看"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_11" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_def"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_5">

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_host"></ImageView>

            <TextView
                android:id="@+id/tv_host_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_1"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"
                tools:text="9689" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_1"
                android:text="人气"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_7" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_def"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_user_head_img"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:src="@drawable/default_avatar"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLength="15"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_11"
                tools:text="@韩寒将  欢迎进入本房间" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_head"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:src="@drawable/default_avatar"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/iv_room_lock"
                    android:layout_width="@dimen/dp_65"
                    android:visibility="gone"
                    android:layout_height="@dimen/dp_65"
                    android:src="@mipmap/icon_home_room_lock"></ImageView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/icom_more"></ImageView>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_head_img"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@drawable/default_avatar"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="CP.小可爱" />


                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff969696"
                    android:textSize="@dimen/sp_11"
                    tools:text="超级萌" />
            </LinearLayout>

        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_more"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:src="@mipmap/icom_more"></ImageView>-->

    </RelativeLayout>

</LinearLayout>
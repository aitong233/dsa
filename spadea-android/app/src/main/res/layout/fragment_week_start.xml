<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        app:srlEnableLoadMore="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_169"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@mipmap/bg_week_star_ranking">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_40"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/iv_gift1"
                                    android:layout_width="@dimen/dp_88"
                                    android:layout_height="@dimen/dp_88"
                                    app:riv_corner_radius="5dp"></com.makeramen.roundedimageview.RoundedImageView>

                                <TextView
                                    android:id="@+id/tv_gift_name1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text=" "
                                    android:textColor="#ffffffff"
                                    android:textSize="@dimen/sp_11" />
                            </LinearLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/iv_gift2"
                                    android:layout_width="@dimen/dp_88"
                                    android:layout_height="@dimen/dp_88"
                                    app:riv_corner_radius="5dp"></com.makeramen.roundedimageview.RoundedImageView>

                                <TextView
                                    android:id="@+id/tv_gift_name2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text=" "
                                    android:textColor="#ffffffff"
                                    android:textSize="@dimen/sp_11" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_100"
                        android:scaleType="fitXY"
                        android:src="@mipmap/bg_week_star_gift"></ImageView>
                    <!--第一名-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_30"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_img_no1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/riv_no1_head_no1"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_29"
                                android:src="@drawable/default_image"
                                app:riv_border_color="#F0DA91"
                                app:riv_border_width="@dimen/dp_2"
                                app:riv_corner_radius="50dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:src="@drawable/icon_no1"></ImageView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:src="@drawable/icon_an_crown_big"></ImageView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_nickname_no1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="虚位以待"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_ffff8890_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_3">

                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_13"
                                android:src="@mipmap/ic_diamonds"></ImageView>

                            <TextView
                                android:id="@+id/tv_num_no1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_12"
                                tools:text="" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--第二名-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_38"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_100"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_img_no2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/riv_no1_head_no2"
                                android:layout_width="@dimen/dp_55"
                                android:layout_height="@dimen/dp_55"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_29"
                                android:src="@drawable/default_image"
                                app:riv_border_color="#A2C5CE"
                                app:riv_border_width="@dimen/dp_2"
                                app:riv_corner_radius="50dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/icon_no2"></ImageView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:src="@drawable/icon_silvermedal"></ImageView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_nickname_no2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="虚位以待"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_ffff8890_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_3">

                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_13"
                                android:src="@mipmap/ic_diamonds"></ImageView>

                            <TextView
                                android:id="@+id/tv_num_no2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_12"
                                tools:text="× 259" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--第三名-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_120"
                        android:layout_marginRight="@dimen/dp_38"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_img_no3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/riv_no1_head_no3"
                                android:layout_width="@dimen/dp_55"
                                android:layout_height="@dimen/dp_55"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_29"
                                android:src="@drawable/default_image"
                                app:riv_border_color="#E3CA9D"
                                app:riv_border_width="@dimen/dp_2"
                                app:riv_corner_radius="50dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/icon_no3"></ImageView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:src="@drawable/icon_bronze_medal"></ImageView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_nickname_no3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="虚位以待"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/bg_ffff8890_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_3">

                            <ImageView
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_13"
                                android:src="@mipmap/ic_diamonds"></ImageView>

                            <TextView
                                android:id="@+id/tv_num_no3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:textColor="#ffffffff"
                                android:textSize="@dimen/sp_12"
                                tools:text="× 259" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_250"
                        android:descendantFocusability="blocksDescendants">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_55"></android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="#FFF">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedimageview"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_29"
            android:src="@drawable/default_image"
            app:riv_corner_radius="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/roundedimageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/sp_13"
                tools:text="PU.缺陷" />


            <TextView
                android:id="@+id/tv_ranking_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/sp_11"
                tools:text="目前排名10000+" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_disparity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#000000"
            android:textSize="@dimen/sp_12"
            tools:text="距离上榜还差95282名" />

    </RelativeLayout>

</RelativeLayout>
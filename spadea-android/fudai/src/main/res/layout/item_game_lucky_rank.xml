<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/default_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="打开"
        android:textColor="#FFFFE597"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_nickname"
        app:layout_constraintStart_toEndOf="@id/civ_head"
        app:layout_constraintTop_toTopOf="@id/civ_head" />

    <TextView
        android:id="@+id/tv_lucky_bag_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="金福袋X100"
        android:textColor="#FFFFC61B"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_open"
        app:layout_constraintStart_toEndOf="@id/tv_open" />

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="获得"
        android:textColor="#FFFFE597"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_open"
        app:layout_constraintStart_toEndOf="@id/tv_lucky_bag_number" />

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="恋蝶瓶"
        android:textColor="#FFFFE597"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_open"
        app:layout_constraintStart_toEndOf="@id/tv_get" />

    <TextView
        android:id="@+id/tv_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="x100"
        android:textColor="#FFD12CEF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_open"
        app:layout_constraintStart_toEndOf="@id/tv_gift_name" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#FF7887E6"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/civ_head"
        app:layout_constraintTop_toBottomOf="@id/tv_open" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:textColor="#FFFFE597"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@id/civ_head"
        app:layout_constraintStart_toStartOf="@id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname" />

</android.support.constraint.ConstraintLayout>
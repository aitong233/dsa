<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    app:srlEnablePreviewInEditMode="true"
    app:srlEnablePureScrollMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_56"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_106"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginRight="@dimen/dp_26"
                    android:orientation="horizontal">

                    <com.qpyy.libcommon.widget.DecorationHeadView
                        android:id="@+id/riv_user_head"
                        android:layout_width="@dimen/dp_106"
                        android:layout_height="@dimen/dp_106"
                        android:layout_marginLeft="-2dp"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_75"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/me_icon_arrow_grey"
                            android:singleLine="true"
                            android:textColor="#6D7278"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            tools:text="十个字十个字十个字十" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_nobility"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:scaleType="fitCenter"
                                tools:background="@color/color_FF88CF" />

                            <ImageView
                                android:id="@+id/iv_level"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginRight="@dimen/dp_5"
                                android:scaleType="fitCenter"
                                tools:background="@color/color_FF88CF" />

                            <com.qpyy.libcommon.widget.AgeView
                                android:id="@+id/age_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="#3EA2AFFF"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5">

                            <TextView
                                android:id="@+id/tv_user_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#A0B0FF"
                                android:textSize="@dimen/sp_11"
                                tools:text="ID：23123214" />

                            <ImageView
                                android:id="@+id/iv_liang"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:src="@mipmap/me_icon_liang" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_follow"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#6D7278"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#B4B4B4"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_fans"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#6D7278"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="#B4B4B4"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_friends"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#6D7278"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好友"
                            android:textColor="#B4B4B4"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_visit"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#6D7278"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="来访"
                            android:textColor="#B4B4B4"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_59"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_my_lens"
                        android:layout_width="@dimen/dp_156"
                        android:layout_height="match_parent"
                        android:background="@mipmap/me_img_lens"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        android:text="我的空间"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_my_room"
                        android:layout_width="@dimen/dp_156"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_18"
                        android:background="@mipmap/me_img_my_room"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        android:text="我的房间"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/me_bg_me"
                    android:orientation="vertical">

                    <!--         个性装扮   -->
                    <RelativeLayout
                        android:id="@+id/rl_decoration"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_decoration"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="个性装扮"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--        我的爵位    -->
                    <RelativeLayout
                        android:id="@+id/rl_nobility"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_nobility"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="我的爵位"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--     会员中心       -->

                    <RelativeLayout
                        android:id="@+id/rl_vip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_vip"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="会员中心"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>

                    <!--    实名认证        -->

                    <RelativeLayout
                        android:id="@+id/rl_auth"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_authentication"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="实名认证"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--        我的公会    -->
                    <RelativeLayout
                        android:id="@+id/rl_union"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_union"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="我的公会"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--     资质申请       -->
                    <!--        我的邀请码    -->
                    <RelativeLayout
                        android:id="@+id/rl_invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_ic_invite_code"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="我的邀请码"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--        我的钱包    -->
                    <RelativeLayout
                        android:id="@+id/rl_my_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_img_wallet"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="我的钱包"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/me_bg_me"
                    android:orientation="vertical">

                    <!--         在线客服   -->
                    <RelativeLayout
                        android:id="@+id/rl_service"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_service"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="在线客服"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--        帮助中心    -->
                    <RelativeLayout
                        android:id="@+id/rl_help"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_help"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="帮助中心"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>
                    <!--     设置       -->

                    <RelativeLayout
                        android:id="@+id/rl_setting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55"
                        android:background="@drawable/item_click"
                        android:paddingLeft="@dimen/dp_17"
                        android:paddingRight="@dimen/dp_18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/me_icon_setting"
                            android:drawablePadding="@dimen/dp_11"
                            android:text="设置"
                            android:textColor="#ff545454"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/me_icon_arrow_grey"></ImageView>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>

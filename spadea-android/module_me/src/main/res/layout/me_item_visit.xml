<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:background="#FFF"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        android:layout_centerVertical="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_user_head"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_16"
            android:scaleType="fitXY"
            app:riv_border_color="#6765FF"
            app:riv_border_width="@dimen/dp_1"
            app:riv_oval="true"
            tools:src="#FFF" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/riv_user_head"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_14"
            tools:text="卜云乐" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/riv_user_head"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nobility"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:layout_marginRight="@dimen/dp_5"
                tools:src="@color/color_4d" />

            <ImageView
                android:id="@+id/iv_grade"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:scaleType="fitCenter"
                tools:src="@color/color_4d" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:text="1天前"
        android:textColor="#ffb4b4b4"
        android:textSize="@dimen/sp_11" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4" />


</RelativeLayout>
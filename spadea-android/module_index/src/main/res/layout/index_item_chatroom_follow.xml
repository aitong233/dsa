<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:background="@drawable/shape_fff_15"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="72dp"
            android:src="@mipmap/index_img_rcmd_frame" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_room_picture"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="12dp"
            app:riv_border_color="#E3E3E3"
            app:riv_oval="true"
            tools:src="@color/color_FF88CF" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#ff6d7278"
        tools:text="现在直播骑着..."
        tools:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hot"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/index_hot_anim" />

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#ff6d7278"
            android:textSize="11sp"
            tools:text="9453" />
    </LinearLayout>

</LinearLayout>
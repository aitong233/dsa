<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/index_bg_last_week_star_item"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        app:hl_cornerRadius="10.5dp"
        app:hl_shadowBackColor="@color/color_white"
        app:hl_shadowColor="#80FF4747"
        app:hl_shadowLimit="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/color_FF6D7278"
                android:textSize="12sp"
                tools:text="汉堡包" />

        </LinearLayout>
    </com.lihang.ShadowLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:src="@color/color_FF9C9C9C"
        app:riv_border_color="@color/color_FF6765FF"
        app:riv_border_width="1dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="12sp"
        tools:text="利力星" />

    <LinearLayout
        android:id="@+id/ll_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_level"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_charm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/index_bg_ranking_wealth"
        android:gravity="center"
        android:paddingLeft="26dp"
        android:paddingTop="5dp"
        android:paddingRight="6dp"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        tools:text="6777" />

    <LinearLayout
        android:id="@+id/ll_follow"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/index_bg_last_week_star_item_follow"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/index_ic_week_star_follow" />
    </LinearLayout>
</LinearLayout>
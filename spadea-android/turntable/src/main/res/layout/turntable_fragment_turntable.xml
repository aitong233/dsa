<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_jiazi"
        android:layout_width="310.5dp"
        android:layout_height="451dp"
        android:layout_marginTop="72dp"
        android:background="@mipmap/turntable_pic_jiazi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_turntable_title" />

    <ImageView
        android:id="@+id/iv_turntable_title"
        android:layout_width="280dp"
        android:layout_height="93dp"
        android:background="@mipmap/turntable_pic_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yutang.game.turntable.widget.TurntableView
        android:id="@+id/turntableView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="66dp"
        android:background="@mipmap/turntable_img_zhuanpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_turntable_title" />

    <ImageView
        android:layout_width="78dp"
        android:layout_height="91dp"
        android:layout_marginTop="99dp"
        android:background="@mipmap/turntable_img_zhizhen"
        app:layout_constraintEnd_toEndOf="@id/turntableView"
        app:layout_constraintStart_toStartOf="@id/turntableView"
        app:layout_constraintTop_toTopOf="@id/turntableView" />

    <ImageView
        android:id="@+id/iv_lucky_rank"
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:background="@mipmap/turntable_pic_lucky_rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_turntable_title" />

    <ImageView
        android:id="@+id/iv_pool"
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:background="@mipmap/turntable_pic_pool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_lucky_rank" />

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:background="@mipmap/turntable_pic_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pool" />

    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="40dp"
        android:layout_height="42.5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:background="@mipmap/turntable_pic_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_record" />

    <ImageView
        android:id="@+id/iv_text_yue"
        android:layout_width="48dp"
        android:layout_height="15.5dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="17dp"
        android:background="@mipmap/turntable_text_yue"
        app:layout_constraintStart_toStartOf="@id/turntableView"
        app:layout_constraintTop_toBottomOf="@id/turntableView" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="106dp"
        android:layout_height="17.5dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14.5dp"
        android:background="@mipmap/turntable_bg_money"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"
        android:text="0.00"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_text_yue"
        app:layout_constraintTop_toBottomOf="@id/turntableView" />

    <ImageView
        android:id="@+id/iv_recharge"
        android:layout_width="39dp"
        android:layout_height="18.5dp"
        android:layout_marginStart="9.5dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/turntable_btn_recharge"
        app:layout_constraintStart_toEndOf="@id/tv_money"
        app:layout_constraintTop_toBottomOf="@id/turntableView" />

    <ImageView
        android:id="@+id/iv_btn_zuan_1"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="48.5dp"
        android:background="@mipmap/turntable_btn_zuan_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_jiazi"
        app:layout_constraintStart_toStartOf="@id/iv_jiazi" />

    <ImageView
        android:id="@+id/iv_btn_zuan_10"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="48.5dp"
        android:background="@mipmap/turntable_btn_zuan_10"
        app:layout_constraintBottom_toBottomOf="@id/iv_jiazi"
        app:layout_constraintStart_toEndOf="@id/iv_btn_zuan_1" />

    <ImageView
        android:id="@+id/iv_btn_zuan_50"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="48.5dp"
        android:background="@mipmap/turntable_btn_zuan_50"
        app:layout_constraintBottom_toBottomOf="@id/iv_jiazi"
        app:layout_constraintStart_toEndOf="@id/iv_btn_zuan_10" />

    <TextView
        android:id="@+id/tv_price_1"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginTop="6.5dp"
        android:background="@mipmap/turntable_price_bg"
        android:gravity="center"
        android:text="20000"
        android:textColor="#FFE400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_btn_zuan_1"
        app:layout_constraintStart_toStartOf="@id/iv_btn_zuan_1"
        app:layout_constraintTop_toBottomOf="@id/iv_btn_zuan_1" />

    <TextView
        android:id="@+id/tv_price_10"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginTop="6.5dp"
        android:background="@mipmap/turntable_price_bg"
        android:gravity="center"
        android:text="20000"
        android:textColor="#FFE400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_btn_zuan_10"
        app:layout_constraintStart_toStartOf="@id/iv_btn_zuan_10"
        app:layout_constraintTop_toBottomOf="@id/iv_btn_zuan_10" />

    <TextView
        android:id="@+id/tv_price_50"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginTop="6.5dp"
        android:background="@mipmap/turntable_price_bg"
        android:gravity="center"
        android:text="20000"
        android:textColor="#FFE400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_btn_zuan_50"
        app:layout_constraintStart_toStartOf="@id/iv_btn_zuan_50"
        app:layout_constraintTop_toBottomOf="@id/iv_btn_zuan_50" />

</android.support.constraint.ConstraintLayout>